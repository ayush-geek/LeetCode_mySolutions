class   Solution   { 
 public : 
      bool   isPalindrome ( string s )   { 
          int  i = 0 ; 
          int  j = s . size ( ) - 1 ; 
          while ( 1 ) 
          {    
              while ( i < j  &&   ! iswalnum ( s [ i ] )   ) 
                 i ++ ; 
              while ( i < j  &&   ! iswalnum ( s [ j ] )   ) 
                 j -- ; 
                 cout << i << " " << j << endl ; 
              if ( i >= j ) 
                  break ; 
              char  lft = tolower ( s [ i ] ) ; 
              char  rgt = tolower ( s [ j ] ) ; 
 
 
              if ( lft != rgt ) 
                  return   false ; 
             i ++ ; 
             j -- ; 
          } 
          return   true ; 
      } 
 } ;