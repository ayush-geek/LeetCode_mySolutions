class   Solution   { 
 public : 
      int   hammingWeight ( uint32_t  n )   { 
         
          int  i = 0 ; 
          int  ct = 0 ; 
          for ( int  i = 0 ; i < 32 ; i ++ ) 
          { 
              int  bit =  n &   ( 1 << i ) ; 
 
              if ( bit ) 
                 ct ++ ; 
          } 
          return  ct ; 
      } 
 } ;