class   Solution   { 
 public : 
      bool   makePalindrome ( string s )   { 
         
          int  i = 0 ; 
          int  j = s . size ( ) - 1 ; 
          int  ct = 0 ; 
          while ( i < j ) 
          { 
              if ( s [ i ] != s [ j ] ) 
                 ct ++ ; 
             i ++ ; 
             j -- ; 
          } 
          return  ct <= 2 ; 
      } 
 } ;