class   Solution   { 
 public : 
 
      bool   solve ( string s , int  i , int  j ) 
      { 
          while ( i < j ) 
          { 
              if ( s [ i ] != s [ j ] ) 
                  return   false ; 
             
             i ++ ; 
             j -- ; 
          } 
          return   true ; 
      } 
 
      bool   validPalindrome ( string s )   { 
          int  i = 0 ; 
          int  j = s . size ( ) - 1 ; 
          //worst case 1 char diff consider 
          //string length 1e5 
          // Tc 2*(O(n)) 
 
 
          while ( i < j ) 
          { 
              if ( s [ i ] != s [ j ] ) 
              { 
                  return   solve ( s , i + 1 , j )   ||   solve ( s , i , j - 1 ) ; 
              } 
             i ++ ; 
             j -- ; 
         
          } 
          return   true ; 
      } 
 } ;